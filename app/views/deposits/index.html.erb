<p id="notice"><%= notice %></p>

<h1>Listing Deposits</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Member</th>
      <th>Name</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deposits.each do |deposit| %>
      <tr>
        <td><%= deposit.user_id %></td>
        <td><%= deposit.member_id %></td>
        <td><%= deposit.name %></td>
        <td><%= deposit.amount %></td>
        <td><%= deposit.date %></td>
        <td><%= deposit.comments %></td>
        <td><%= link_to 'Show', deposit %></td>
        <td><%= link_to 'Edit', edit_deposit_path(deposit) %></td>
        <td><%= link_to 'Destroy', deposit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

